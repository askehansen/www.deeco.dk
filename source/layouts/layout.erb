<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Use the title from a page's frontmatter if it has one -->
    <title><%= current_page.data.title || "Middleman" %></title>
    <%= stylesheet_link_tag "site", 'https://cdnjs.cloudflare.com/ajax/libs/basscss/8.0.3/css/basscss.min.css' %>
    <%= javascript_include_tag "site" %>
    <script src="https://use.typekit.net/aaj7otw.js"></script>
    <script>try{Typekit.load({ async: true });}catch(e){}</script>
  </head>
  <body>
    <div class="backdrop">
    </div>
    <div class="backdrop-second">
    </div>
    <div class="main">
      <%= yield %>
    </div>
  </body>
</html>
